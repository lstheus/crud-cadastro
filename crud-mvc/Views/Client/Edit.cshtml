@model crud_mvc.Models.Client
@{
    ViewBag.Title = "Edit";
}
<html>
    <head>

    </head>
    <body>
        <form method="post" asp-action="_Edit">
      <input asp-for="Id" hidden />
    <div class="border m-5 p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Edit</h2>
        </div>


        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="CEP"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="City"></label>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-4">
                        <input class="form-control" id="fullname"  asp-for="FullName" required= "required">
                    </div>
                   
                    <div class="col-4">
                        <input class="form-control" id="cep" asp-for="CEP" required= "required">
                    </div>
                    <div class="col-4">
                        <input class="form-control"  id="city"  asp-for="City" readonly = "readonly">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="District"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="State"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input class="form-control" id="address" asp-for="Address" readonly = "readonly">
                    </div>
                    <div class="col-4">
                        <input class="form-control" id="district" asp-for="District" readonly = "readonly">
                    </div>
                    <div class="col-4">
                        <input class="form-control" id="state" asp-for="State" readonly = "readonly">
                    </div>

                </div>
                <div class="form-group row pt-3">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info  w-75" value="Edit" />

                        </div>
                        <div class="col">
                            <a asp-controller="Client" asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js"></script>
    </body>
</html>

